[Unit]
Description=Marathon @ %i
Requires=docker.service
After=docker.service bootstrap.service zk-health.service mesos-master@%i.service

[Service]
EnvironmentFile=/etc/environment
Environment=ZOOKEEPER_HOST=localhost:2181
Environment="IMAGE=/home/core/ethos-systemd/v1/lib/etcdauth.sh get /images/marathon"
Environment="USER=/home/core/ethos-systemd/v1/lib/etcdauth.sh get /marathon/config/username"
Environment="PASSWORD=/home/core/ethos-systemd/v1/lib/etcdauth.sh get /marathon/config/password"
Environment="MESOS_USERNAME=/home/core/ethos-systemd/v1/lib/etcdauth.sh get /mesos/config/username"
Environment="ZK_USERNAME=/home/core/ethos-systemd/v1/lib/etcdauth.sh get /zookeeper/config/username"
Environment="ZK_PASSWORD=/home/core/ethos-systemd/v1/lib/etcdauth.sh get /zookeeper/config/password"

User=core
Restart=always
RestartSec=8
TimeoutStartSec=0

ExecStartPre=/usr/bin/systemctl is-active update-os.timer
ExecStartPre=/usr/bin/systemctl is-active zk-health.service
ExecStartPre=/usr/bin/systemctl is-active mesos-master@*
ExecStartPre=/usr/bin/bash -c "if [ ! -f /opt/mesos/framework-secret ]; then exit 1; fi"
ExecStartPre=/usr/bin/sh -c "docker pull $($IMAGE)"
ExecStartPre=-/usr/bin/docker kill marathon
ExecStartPre=-/usr/bin/docker rm marathon

ExecStart=/usr/bin/sh -c "/usr/bin/docker run \
  --name marathon \
  -e LIBPROCESS_PORT=9090 \
  --env JAVA_OPTS=\"-XX:+PrintCommandLineFlags -XX:+PrintGC -XX:+PrintGCCause -XX:+PrintGCDetails -XX:+PrintGCTimeStamps -XX:+PrintGCDateStamps -XX:+PrintGCApplicationConcurrentTime -XX:+PrintGCApplicationStoppedTime -XX:+PrintTenuringDistribution -XX:+PrintAdaptiveSizePolicy -Xmx1g -Xms1g -XX:+AlwaysPreTouch -Xss512k\" \
  --net=host \
  -v /opt/mesos/framework-secret:/opt/mesos/framework-secret:ro \
  $($IMAGE) \
  --mesos_authentication \
  --mesos_authentication_principal $($MESOS_USERNAME) \
  --mesos_authentication_secret_file /opt/mesos/framework-secret \
  --master zk://$($ZK_USERNAME):$($ZK_PASSWORD)@$ZOOKEEPER_HOST/mesos \
  --zk zk://$($ZK_USERNAME):$($ZK_PASSWORD)@$ZOOKEEPER_HOST/marathon \
  --http_credentials $($USER):$($PASSWORD) \
  --checkpoint \
  --task_launch_timeout 300000"

ExecStop=-/usr/bin/docker stop marathon

[Install]
WantedBy=multi-user.target

[X-Fleet]
Global=false
MachineMetadata=role=control
MachineMetadata=ip=%i
